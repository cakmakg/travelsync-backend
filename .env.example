# Server Configuration
NODE_ENV=production
PORT=8000

# Database (MongoDB Atlas)
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/TravelSync

# Security (JWT)
# Generate random strong secrets for production
JWT_ACCESS_SECRET=your_production_access_secret_key
JWT_REFRESH_SECRET=your_production_refresh_secret_key
JWT_ACCESS_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Frontend URL (For CORS)
CORS_ORIGIN=https://your-frontend-domain.vercel.app

# Redis (Optional - for rate limiting or caching)
REDIS_URL=redis://:<password>@<host>:<port>

# Stripe (Payments)
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Email Service (SMTP / SendGrid / etc.)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASS=password
EMAIL_FROM=noreply@example.com

# Other Services
# GOOGLE_CLIENT_ID=...
# GOOGLE_CLIENT_SECRET=...
